<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/LightGreen"
    android:clickable="false"
    android:id="@id/incomingCallView"
    android:focusable="false">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonAnswer"
        android:background="@drawable/greencall"
        android:clickable="false"
        android:singleLine="false"
        android:paddingLeft="0dp"
        android:layout_marginLeft="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_row="9"
        android:layout_column="16"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="110dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Calling_Msg"
        android:id="@+id/CallingtextView"
        android:layout_gravity="center"
        android:textColor="@color/White"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/buttonReject"
        android:background="@drawable/redcall"
        android:clickable="true"
        android:layout_alignTop="@+id/buttonAnswer"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|bottom"
        android:layout_row="11"
        android:layout_column="17"
        android:layout_marginBottom="117dp"
        android:layout_marginRight="55dp" />


